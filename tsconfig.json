{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "lib": ["ES2022"],
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "removeComments": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true
    },
    "include": [
      "tests/**/*",
      "pages/**/*",
      "utils/**/*",
      "types/**/*",
      "playwright.config.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "test-results"
    ]
  }